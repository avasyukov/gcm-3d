<task numberOfSnaps="100" stepsPerSnap="20" xmlns:ndi="gcm3d.plugins.ndi">
	<system>
		<loadPlugin name="ndi" />
		<timeStep multiplier="0.25" />                
		<meshMovement type="none" />
	        <prefix front="victorian_007_"/>
	</system>
	<bodies>
		<body id="ice">
        		<rheology type="elastic" />
            		<mesh id="ice" type="geo2" file="models/ice_halfspace.geo" tetrSize="0.25" /> <!-- sm -->
            		<material id="ice" />
        	</body>
	</bodies>

    <materials>
                <material name="ice" rheology="isotropic" viscous="yep">
			<!-- g / (sm * s^2 ) == 0.1 Pa-->
                        <la>114e9</la>
                        <mu>34e9</mu>
			<!-- g / sm^3 -->
                        <rho>0.9</rho>
			<!-- 1 / s -->
                        <tau>10.0</tau>
                </material>
    </materials>

	<!--ndi:emitter name="em" sensor="true"-->
