<task numberOfSnaps="300" stepsPerSnap="8" xmlns:ndi="gcm3d.plugins.ndi">
	<system>
		<loadPlugin name="ndi" />
		<timeStep multiplier="0.25" />                
		<meshMovement type="none" />
	        <prefix front="victorian_025_"/>
	</system>
	<bodies>
		<body id="ice">
        		<rheology type="elastic" />
            		<mesh id="ice" type="geo2" file="models/ice_puff.geo" tetrSize="0.25" /> <!-- sm -->
            		<material id="iceA">
				<area type="box" minX="-100" maxX="100" minY="-100" maxY="100" minZ="-100" maxZ="100"/>
 			</material>
                        <material id="iceB">
                                <area type="box" minX="-100" maxX="100" minY="-100" maxY="100" minZ="-2" maxZ="-1"/>
                        </material>
                        <material id="iceC">
                                <area type="box" minX="-100" maxX="100" minY="-100" maxY="100" minZ="-1" maxZ="100"/>
                        </material>
        	</body>
	</bodies>

    <materials>
                <material name="iceA" rheology="isotropic" viscous="yep">
			<!-- g / (sm * s^2 ) == 0.1 Pa-->
                        <la>114e9</la>
                        <mu>34e9</mu>
			<!-- g / sm^3 -->
                        <rho>0.9</rho>
			<!-- 1 / s -->
                        <tau>10.0</tau>
                </material>
                <material name="iceB" rheology="isotropic" viscous="yep">
                        <!-- g / (sm * s^2 ) == 0.1 Pa-->
                        <la>80e9</la>
                        <mu>20e9</mu>
                        <!-- g / sm^3 -->
                        <rho>0.8</rho>
                        <!-- 1 / s -->
                        <tau>10.0</tau>
                </material>
                <material name="iceC" rheology="isotropic" viscous="yep">
                        <!-- g / (sm * s^2 ) == 0.1 Pa-->
                        <la>180e9</la>
                        <mu>60e9</mu>
                        <!-- g / sm^3 -->
                        <rho>1.2</rho>
                        <!-- 1 / s -->
                        <tau>10.0</tau>
                </material>
    </materials>

