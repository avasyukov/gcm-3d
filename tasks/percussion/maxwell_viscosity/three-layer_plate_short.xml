<task numberOfSnaps="400" stepsPerSnap="15">
	<system>
		<!-- <loadPlugin name="ndi" /> -->
		<timeStep multiplier="0.25" />                
		<meshMovement type="none" />
	        <prefix front="victorian_003_"/>
        <plasticity type="maxwell" />
	</system>
	<bodies>
		<body id="ice">
        		<rheology type="elastic" />
                    <mesh id="ice" type="cube" h="0.2" numX="150" numY="150" numZ="15"/>  <!-- ice_puff.geo -->
                        <transform type="translate" moveX="-15" moveY="-15" moveZ="-3"/>
            		<material id="iceA">
				<area type="box" minX="-100" maxX="100" minY="-100" maxY="100" minZ="-100" maxZ="-1"/>
 			</material>
                        <material id="iceB">
                                <area type="box" minX="-100" maxX="100" minY="-100" maxY="100" minZ="-1" maxZ="-0.4"/>
