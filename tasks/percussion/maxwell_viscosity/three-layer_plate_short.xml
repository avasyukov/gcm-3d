                        </material>
        	</body>
	</bodies>

    <materials>
                <material name="iceA" rheology="isotropic" viscous="yep">  <!--поверхностный слой-->
			<!-- g / (sm * s^2 ) == 0.1 Pa-->
                        <la>685670</la>
                        <mu>13990</mu>
			<!-- g / sm^3 -->
                        <rho>1.109</rho>
			<!-- 1 / s -->
                        <plasticity type="maxwell">
                            <tau>0.0007</tau>
                        </plasticity>
                </material>
                <material name="iceB" rheology="isotropic" viscous="yep">  <!--серединный мышечно-реберный слой-->
			<!-- g / (sm * s^2 ) == 0.1 Pa-->
                        <la>293980</la>
                        <mu>201340</mu>
			<!-- g / sm^3 -->
                        <rho>1.2</rho>
			<!-- 1 / s -->
                        <plasticity type="maxwell">
                            <tau>0.0005</tau>
                        </plasticity>
                </material>
                <material name="iceC" rheology="isotropic" viscous="yep"> <!--глубинный слой-->
                        <!-- g / (sm * s^2 ) == 0.1 Pa-->
                        <la>651720</la>
                        <mu>7240</mu>
                        <!-- g / sm^3 -->
                        <rho>0.0005</rho>
                        <!-- 1 / s -->
                        <plasticity type="maxwell">
                            <tau>0.0009</tau>
                        </plasticity>
                </material>
    </materials>


